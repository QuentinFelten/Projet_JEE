<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
            <include-prelude>/WEB-INF/header.jsp</include-prelude>
            <include-coda>/WEB-INF/footer.jsp</include-coda>
        </jsp-property-group>
    </jsp-config>
    
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>control.Servlet</servlet-class>
        
        <init-param>
            <param-name>goodLogin</param-name>
            <param-value>jee</param-value>
        </init-param>
        <init-param>
            <param-name>goodPass</param-name>
            <param-value>jee</param-value>
        </init-param>
    </servlet>
    

    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/Servlet</url-pattern>
    </servlet-mapping>
</web-app>
